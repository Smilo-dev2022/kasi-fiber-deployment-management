# Environment: Production
# Use secret names/references from your secret manager, not plain values

APP_ENV=production
APP_BASE_URL=https://app.example.com
LOG_LEVEL=warn
PORT=8080

# Secret manager configuration
SECRET_MANAGER_PROVIDER=aws|gcp|azure|vault|file
SECRETS_PREFIX=prod/

# Secret names (references only)
DATABASE_URL_SECRET_NAME=prod/app/database_url
REDIS_URL_SECRET_NAME=prod/app/redis_url
JWT_SECRET_NAME=prod/app/jwt_secret
WEBHOOK_SIGNING_SECRET_NAME=prod/app/webhook_signing_secret
API_TOKEN_SECRET_NAME=prod/app/api_token

# Optional integrations
LIBRENMS_API_TOKEN_SECRET_NAME=prod/integrations/librenms_api_token
ZABBIX_API_TOKEN_SECRET_NAME=prod/integrations/zabbix_api_token
