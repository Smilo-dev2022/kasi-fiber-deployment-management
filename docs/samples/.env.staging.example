# Environment: Staging
# Use secret names/references from your secret manager, not plain values

APP_ENV=staging
APP_BASE_URL=https://staging.example.com
LOG_LEVEL=info
PORT=8080

# Secret manager configuration
SECRET_MANAGER_PROVIDER=aws|gcp|azure|vault|file
SECRETS_PREFIX=staging/

# Secret names (references only)
DATABASE_URL_SECRET_NAME=staging/app/database_url
REDIS_URL_SECRET_NAME=staging/app/redis_url
JWT_SECRET_NAME=staging/app/jwt_secret
WEBHOOK_SIGNING_SECRET_NAME=staging/app/webhook_signing_secret
API_TOKEN_SECRET_NAME=staging/app/api_token

# Optional integrations
LIBRENMS_API_TOKEN_SECRET_NAME=staging/integrations/librenms_api_token
ZABBIX_API_TOKEN_SECRET_NAME=staging/integrations/zabbix_api_token
