{
  "info": {
    "name": "Your Product API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{api_token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/health",
          "host": [ "{{base_url}}" ],
          "path": [ "health" ]
        }
      }
    }
  ],
  "variable": [
    { "key": "base_url", "value": "https://api.example.com" },
    { "key": "api_token", "value": "" }
  ]
}