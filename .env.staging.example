# === Application ===
APP_NAME=ExampleService
APP_ENV=staging
APP_URL=https://staging.example.com
PORT=8080
LOG_LEVEL=debug
TZ=UTC

# === Security ===
JWT_SECRET=__SET_32+_CHAR_SECRET__
SESSION_SECRET=__SET_32+_CHAR_SECRET__
COOKIE_SECRET=__SET_32+_CHAR_SECRET__
ENCRYPTION_KEY_BASE64=__BASE64_32_BYTES__
HMAC_SIGNING_SECRET=__SET_32+_CHAR_SECRET__
CSRF_SECRET=__SET_32+_CHAR_SECRET__
CORS_ALLOWED_ORIGINS=https://staging.example.com

# === Database (PostgreSQL) ===
DATABASE_URL=postgres://APP_USER:APP_PASSWORD@DB_HOST:5432/APP_DB?sslmode=prefer

# === Cache (Redis) ===
REDIS_URL=redis://:REDIS_PASSWORD@REDIS_HOST:6379/0

# === Email (SMTP) ===
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-user
SMTP_PASSWORD=__SMTP_PASSWORD__
SMTP_FROM_ADDRESS=alerts@staging.example.com
SMTP_TLS=true

# === Monitoring/Webhooks ===
LIBRENMS_WEBHOOK_SHARED_SECRET=__LIBRENMS_SECRET__
ZABBIX_WEBHOOK_SHARED_SECRET=__ZABBIX_SECRET__

# === Observability (optional) ===
SENTRY_DSN=__SENTRY_DSN__
OTEL_EXPORTER_OTLP_ENDPOINT=https://otlp.example.com:4318
OTEL_EXPORTER_OTLP_HEADERS=authorization=Bearer __OTEL_TOKEN__

# === Cloud (optional) ===
AWS_ACCESS_KEY_ID=__AWS_ACCESS_KEY_ID__
AWS_SECRET_ACCESS_KEY=__AWS_SECRET_ACCESS_KEY__
AWS_REGION=us-east-1
S3_BUCKET=example-staging-bucket

